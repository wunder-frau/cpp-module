# ðŸ“¦ Project Configuration
NAME     := Mutant
CXX      := c++
CXXFLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp
OBJ := $(SRC:.cpp=.o)

# ðŸ”¨ Build Target
all: $(NAME)

$(NAME): $(OBJ)
	@echo "ðŸ”§ Linking: $(NAME)"
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)

%.o: %.cpp MutantStack.hpp
	@echo "ðŸ“¦ Compiling: $<"
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@echo "ðŸ§¹ Cleaning..."
	rm -f $(OBJ)

fclean: clean
	@echo "ðŸ—‘ï¸ Removing executable..."
	rm -f $(NAME)

re: fclean all
	@echo "ðŸ”„ Rebuild complete!"

.PHONY: all clean fclean re

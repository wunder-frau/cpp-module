# ðŸ“¦ Project Configuration
NAME     := easyfind
CXX      := c++
CXXFLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp
OBJ := $(SRC:.cpp=.o)

# ðŸ”¨ Build Target
all: $(NAME)

$(NAME): $(OBJ)
	@echo "ðŸ”§ Linking: $(NAME)"
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)
	@echo "âœ… Build successful!"

# ðŸ§ª Object Compilation
%.o: %.cpp easyfind.hpp easyfind.tpp
	@echo "ðŸ“¦ Compiling: $<"
	$(CXX) $(CXXFLAGS) -c $< -o $@

# ðŸ§¹ Cleanup Object Files
clean:
	@echo "ðŸ§¹ Cleaning object files..."
	rm -f $(OBJ)

# ðŸ—‘ï¸ Full Clean
fclean: clean
	@echo "ðŸ—‘ï¸ Removing executable: $(NAME)"
	rm -f $(NAME)

# ðŸ”„ Rebuild
re: fclean all
	@echo "ðŸ”„ Rebuild complete!"

.PHONY: all clean fclean re

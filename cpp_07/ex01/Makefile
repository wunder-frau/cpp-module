NAME := iter
COMPILER := c++
FLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp
OBJ := $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@echo "ðŸ”§ Linking $(NAME)..."
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)

%.o: %.cpp
	@echo "ðŸ“¦ Compiling $<..."
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "ðŸ§¹ Cleaning..."
	rm -f $(OBJ)

fclean: clean
	@echo "ðŸ—‘ï¸ Removing executable..."
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

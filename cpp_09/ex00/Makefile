NAME = btc

SRC = main.cpp BitcoinExchange.cpp
OBJ = $(SRC:.cpp=.o)

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++20

all: $(NAME)

$(NAME): $(OBJ)
	@echo "ğŸ”§ Compiling your crypto brain... ğŸ’°"
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)
	@echo "âœ… Done! Your executable '$(NAME)' is ready to crunch numbers ğŸš€"

clean:
	@echo "ğŸ§¹ Sweeping away the object files... ğŸ§¼"
	@rm -f $(OBJ)
	@echo "ğŸ—‘ Object files removed!"

fclean: clean
	@echo "ğŸ’£ Nuking the executable... Goodbye, btc ğŸ˜¢"
	@rm -f $(NAME)
	@echo "âœ… Everything cleaned!"

re: fclean all
	@echo "ğŸ” Rebuilding from scratch... ğŸ§±"

.PHONY: all clean fclean re

NAME = PmergeMe

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++20

SRC = main.cpp PmergeMe.cpp
OBJ = $(SRC:.cpp=.o)
LOG = debug.log

all: $(NAME)

$(NAME): $(OBJ)
	@echo "ğŸ”— Linking the mighty $(NAME)..."
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)
	@echo "âœ… Build complete! Your binary is ready to merge! ğŸ§©"

%.o: %.cpp PmergeMe.hpp
	@echo "ğŸ› ï¸ Compiling $<... Please wait, magic in progress! âœ¨"
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@echo "ğŸ§¹ Cleaning up object files and logs... ğŸ‘‹"
	@rm -f $(OBJ) $(LOG)
	@echo "ğŸ—‘ï¸ Cleaned successfully!"

fclean: clean
	@echo "ğŸ’£ Removing $(NAME)... Hope you said goodbye! ğŸ˜¢"
	@rm -f $(NAME)

re: fclean all
	@echo "ğŸ”„ Rebuilding from scratch... Let's goooo! ğŸš´â€â™‚ï¸ğŸ’¨"

.PHONY: all clean fclean re

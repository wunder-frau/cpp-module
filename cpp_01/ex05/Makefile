# Set variables with emojis and settings
NAME := harl

COMPILER := c++
FLAGS := -std=c++98 -Wall -Wextra -Werror

SRC := main.cpp Harl.cpp
OBJ := $(SRC:.cpp=.o)

GREEN := \033[32m
BLUE := \033[34m
YELLOW := \033[33m
RED := \033[31m
RESET := \033[0m

# Default rule
all: $(NAME)

# Linking the object files to create the executable
$(NAME): $(OBJ)
	@echo "$(BLUE)ğŸ”— Linking $(NAME)... ğŸš€$(RESET)"
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)
	@echo "$(GREEN)âœ… Build successful! Harl is ready! ğŸ—£ï¸$(RESET)"
	@echo "$(YELLOW)â¡ï¸ Usage: ./$(NAME) <level> ğŸ—£ï¸$(RESET)"

# Rule for compiling each .cpp file to .o file
%.o: %.cpp
	@echo "$(YELLOW)âš™ï¸ Compiling $<... ğŸ”„$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

# Clean rule to remove object files
clean:
	@echo "$(RED)ğŸ§¹ Cleaning object files... ğŸ—‘ï¸$(RESET)"
	rm -f $(OBJ)

# Full clean, also removes the executable
fclean: clean
	@echo "$(RED)ğŸ”¥ Removing $(NAME)... âŒ$(RESET)"
	rm -f $(NAME)

# Rebuild the project (clean and make all)
re: fclean all
	@echo "$(GREEN)ğŸ”„ Rebuild complete! Harl is fresh and ready! ğŸ› ï¸$(RESET)"

# Declare these targets as not actual files
.PHONY: all clean fclean re

NAME := harl

COMPILER := c++
FLAGS := -std=c++98 -Wall -Wextra -Werror

SRC := main.cpp Harl.cpp
OBJ := $(SRC:.cpp=.o)

GREEN := \033[32m
BLUE := \033[34m
YELLOW := \033[33m
RED := \033[31m
RESET := \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@echo "$(BLUE)ğŸ”— Linking $(NAME)... ğŸš€$(RESET)"
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)
	@echo "$(GREEN)âœ… Build successful! Harl is ready! ğŸ—£ï¸$(RESET)"
	@echo "$(YELLOW)â¡ï¸ Usage: ./$(NAME) ğŸ—£ï¸$(RESET)"

%.o: %.cpp
	@echo "$(YELLOW)âš™ï¸ Compiling $<... ğŸ”„$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "$(RED)ğŸ§¹ Cleaning object files... ğŸ—‘ï¸$(RESET)"
	rm -f $(OBJ)

fclean: clean
	@echo "$(RED)ğŸ”¥ Removing $(NAME)... âŒ$(RESET)"
	rm -f $(NAME)

re: fclean all
	@echo "$(GREEN)ğŸ”„ Rebuild complete! Harl is fresh and ready! ğŸ› ï¸$(RESET)"

.PHONY: all clean fclean re

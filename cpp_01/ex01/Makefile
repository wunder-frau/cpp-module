	@echo "$(GREEN)๐งโโ๏ธ๐ Build successful! ๐ง$(RESET)"
	@echo "$(YELLOW)โก๏ธ Usage: ./$(NAME) ๐ง$(RESET)"

%.o: %.cpp
	@echo "$(YELLOW)๐ง๐ฆ Compiling $<... ๐ง$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "$(RED)๐งโโ๏ธ๐งน Cleaning object files... ๐ง$(RESET)"
	rm -f $(OBJ)

fclean: clean
	@echo "$(RED)๐งโโ๏ธ๐๏ธ Removing $(NAME)... ๐ง$(RESET)"
	rm -f $(NAME)

re: fclean all

NAME := brainExercise

COMPILER := c++
FLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp
OBJ := $(SRC:.cpp=.o)

GREEN := \033[32m
BLUE := \033[34m
YELLOW := \033[33m
RED := \033[31m
RESET := \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@echo "$(BLUE)๐ง๐จ Linking $(NAME)... ๐งโโ๏ธ$(RESET)"
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)
	@echo "$(GREEN)๐ Build successful! ๐ง$(RESET)"
	@echo "$(YELLOW)โก๏ธ Usage: ./$(NAME) ๐ง$(RESET)"

%.o: %.cpp
	@echo "$(YELLOW)๐ฆ Compiling $<... ๐ง$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "$(RED)๐งน Cleaning object files... ๐งโโ๏ธ$(RESET)"
	rm -f $(OBJ)

fclean: clean
	@echo "$(RED)๐๏ธ Removing $(NAME)... ๐งโโ๏ธ$(RESET)"
	rm -f $(NAME)

re: fclean all
	@echo "$(GREEN)๐ Rebuild complete! ๐ง$(RESET)"

.PHONY: all clean fclean re

NAME := sed

COMPILER := c++
FLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp SedForLosers.cpp
OBJ := $(SRC:.cpp=.o)

GREEN := \033[32m
BLUE := \033[34m
YELLOW := \033[33m
RED := \033[31m
RESET := \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@echo "$(BLUE)âœï¸ğŸ”— Linking $(NAME)... ğŸ”„$(RESET)"
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)
	@echo "$(GREEN)âœ…ğŸ‰ Build successful! Ready to sed! ğŸ“$(RESET)"
	@echo "$(YELLOW)â¡ï¸ Usage: ./$(NAME) <filename> <s1> <s2> ğŸ› ï¸$(RESET)"

%.o: %.cpp
	@echo "$(YELLOW)âš™ï¸ğŸ” Compiling $<... ğŸš€$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "$(RED)ğŸ§¹ğŸ—‘ï¸ Cleaning object files... ğŸ› ï¸$(RESET)"
	rm -f $(OBJ)

fclean: clean
	@echo "$(RED)ğŸ”¥âŒ Removing $(NAME)... ğŸ—‚ï¸$(RESET)"
	rm -f $(NAME)

re: fclean all
	@echo "$(GREEN)ğŸ”„â™»ï¸ Rebuild complete! All set! ğŸ› ï¸$(RESET)"

.PHONY: all clean fclean re
NAME := unnecessaryViolence

COMPILER := c++
FLAGS := -std=c++20 -Wall -Wextra -Werror

SRC := main.cpp Weapon.cpp HumanA.cpp HumanB.cpp
OBJ := $(SRC:.cpp=.o)

GREEN := \033[32m
BLUE := \033[34m
YELLOW := \033[33m
RED := \033[31m
RESET := \033[0m

all: $(NAME)

$(NAME): $(OBJ)
	@echo "$(BLUE)âš”ï¸ğŸ› ï¸ Linking $(NAME)... ğŸ’£$(RESET)"
	$(COMPILER) $(FLAGS) -o $(NAME) $(OBJ)
	@echo "$(GREEN)âœ… Build successful! ğŸ”¥$(RESET)"
	@echo "$(YELLOW)ğŸš€ Ready to execute: ./$(NAME) ğŸ’¥$(RESET)"

%.o: %.cpp
	@echo "$(YELLOW)ğŸ”¨ Compiling $<... ğŸ’£$(RESET)"
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	@echo "$(RED)ğŸ§¹ Cleaning object files... ğŸ”ª$(RESET)"
	rm -f $(OBJ)

fclean: clean
	@echo "$(RED)ğŸ’” Removing $(NAME)... ğŸ§¨$(RESET)"
	rm -f $(NAME)

re: fclean all
	@echo "$(GREEN)ğŸ”„ Rebuild complete! ğŸš‘$(RESET)"

.PHONY: all clean fclean re
